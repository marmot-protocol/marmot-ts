{
  "name": "marmot-ts",
  "version": "0.0.1",
  "type": "module",
  "description": "Marmot protocol implementation in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "pnpm --filter chat dev",
    "examples": "pnpm --filter examples dev",
    "build": "pnpm run clean && pnpm run compile",
    "clean": "rimraf ./dist",
    "compile": "tsc -b tsconfig.build.json",
    "prepublishOnly": "pnpm run build",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parres-hq/marmot-ts.git"
  },
  "keywords": [
    "nostr",
    "mls",
    "marmot"
  ],
  "author": "Parres",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/parres-hq/marmot-ts/issues"
  },
  "homepage": "https://github.com/parres-hq/marmot-ts#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@hpke/core": "^1.7.5",
    "@noble/ciphers": "^2.1.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "applesauce-common": "^5.0.0",
    "applesauce-core": "^5.0.0",
    "nostr-tools": "^2.19.4",
    "ts-mls": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "rimraf": "~6.0.1",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  }
}
